@{

}
@model QSCustomer.Models.ViewModels.User
@using Microsoft.AspNetCore.Identity
@using QSCustomer.Models.DbModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <p asp-area="Identity" asp-page="/Account/Manage/Index">@Model.NameField!</p>
    <p asp-area="Identity" asp-page="/Account/Manage/Index">@Model.UserType</p>
    <h5><a asp-controller="Account" asp-action="Logout">Logout</a></h5>
}
else
{
    <p>QS-Online</p>
    <h5><a asp-controller="Login" asp-action="Index">Login</a></h5>
}